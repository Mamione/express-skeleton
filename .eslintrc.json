{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "overrides": [
    {
      "files": ["src/**/*.ts", "src/**/*.js"]
    }
  ],
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-extra-semi": "off",
    "@typescript-eslint/semi": "off",
    "eol-last": "off",
    "no-trailing-spaces": "off",
    "@typescript-eslint/space-before-function-paren": "off"
  }
}
